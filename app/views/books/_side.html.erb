<h2>User info</h2>
        <%#=image_tag @user.get_image%>
                <%if user.profile_image.attached?%>
                 <%=image_tag user.profile_image,size:"50x50"%>
                <%else%>
                 <%=image_tag 'no_image',size:"50x50"%>
                <%end%>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%=user.name%></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%=user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%=link_to "", edit_user_path(user.id),class: 'btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path'%>
        </div>
           <% if book.errors.any? %>
           <h3>error</h3>
                <ul>
                  <% book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
            <% end %>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: book,url: books_path,method: :post,local: true do |f| %>
          <div class="form-group">
             <label for="booktitle">title</label><br>
            <%=f.text_field :title%><br>
          </div>
          <div class="form-group">
            <label for=bookopinion>opinion</label><br>
          <%=f.text_area :body%><br>
          </div>
          <div class="form-group">
            <%=f.submit'Create Book',class:'btn btn-success'%>
          </div>
          <%end%>