<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render'books/side',user: @user,book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
          <h2>New Book</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do|book|%>
              <tr>
                <td><%if book.user.profile_image.attached?%>
                        <%= link_to image_tag(book.user.profile_image,size:"50x50"),user_path(book.user)%>
                      <%else%>
                        <%=link_to image_tag('no_image',size:"50x50"),user_path(book.user)%>
                      <%end%>
                </td>
                <td><%=link_to book.title,book_path(book)%></td>
                <td><%=book.body%></td>
              </tr>
              <%end%>
            </tbody>
          </table>
    </div>
   </div>
</div>
