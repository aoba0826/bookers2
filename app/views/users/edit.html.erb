

<% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<div class="container">
  <div class"row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%=form_with model: @user,url: user_path,method: :patch,local: true do |f|%>
        <h4>name</h4>
        <%=f.text_field :name%>
        <h4>image</h4>
        <%=f.file_field :profile_image,acept:'image/*'%>
        <h4>introduction</h4>
        <%=f.text_area :introduction%><br>
        <%=f.submit'Update User',class:"btn btn-secondary"%>
        <%end%>
    </div>
  </div>
</div>


