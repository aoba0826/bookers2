<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render'books/side',user: @user,book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
          <th>Title</th>
          <th>opinion</th>
          </tr>
        </thead>
        <tbody>
          <%@books.each do |book|%>
          <tr>
            <th>
              <%if book.user.profile_image.attached?%>
                        <%= link_to image_tag(book.user.profile_image,size:"50x50"),user_path(book.user)%>
                      <%else%>
                        <%=link_to image_tag('no_image',size:"50x50"),user_path(book.user)%>
                      <%end%>
            </th>
            <th>
              <%=link_to book.title,book_path(book.id)%>
            </th>
            <th>
              <%=book.body%>
            </th>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
